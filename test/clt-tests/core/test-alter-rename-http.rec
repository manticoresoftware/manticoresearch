# Test ALTER TABLE RENAME with + encoding - demonstrates bug #3199
# Expected: should work like with %20 encoding
# Actual: returns syntax error
––– input –––
curl -s "http://localhost:9308/sql?query=ALTER+TABLE+products+RENAME+products_new"
––– output –––
{"error":"P03: syntax error, unexpected tablename, expecting '=' near 'products_new'"}
––– comment –––
# Verify table was not renamed due to bug
––– input –––
mysql -h0 -P9306 -e "SHOW TABLES"
––– output –––
+----------+------+
| Table    | Type |
+----------+------+
| articles | rt   |
| products | rt   |
+----------+------+
––– comment –––
# Test SHOW VERSION with + encoding - this works correctly
––– input –––
curl -s "http://localhost:9308/sql?query=SHOW+VERSION" | grep -o '"Component":"Daemon"'
––– output –––
"Component":"Daemon"
––– comment –––
# Test SELECT with + encoding - this works correctly
––– input –––
curl -s "http://localhost:9308/sql?query=SELECT+*+FROM+articles+LIMIT+1" | grep -o '"_id":1'
––– output –––
"_id":1
––– comment –––
# Test SELECT with WHERE clause and + encoding - works correctly
––– input –––
curl -s "http://localhost:9308/sql?query=SELECT+title,+content+FROM+articles+WHERE+MATCH('test')+LIMIT+10" | grep -o '"title":"test"'
––– output –––
"title":"test"
––– comment –––
# Test error handling - verify it shows correct error, not "Source table + not exists"
––– input –––
curl -s "http://localhost:9308/sql?query=ALTER+TABLE+nonexistent+RENAME+new_name"
––– output –––
{"error":"Source table nonexistent not exists"}
––– comment –––
# Test mixed encoding - %20 and + in same query
––– input –––
curl -s "http://localhost:9308/sql?query=SELECT%20title+FROM+articles+WHERE%20MATCH('test')" | grep -o '"title":"test"'
––– output –––
"title":"test"
––– comment –––
# Add test data with spaces
––– input –––
mysql -h0 -P9306 -e "INSERT INTO articles(title,content) VALUES('test with spaces','content with special chars');"
––– output –––
