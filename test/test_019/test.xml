<queries>
<query mode="extended2">basic query</query>
<query mode="extended2">"phrase query"</query>
<query mode="extended2">"phrase (query)/3 ~on steroids"</query>
<query mode="extended2">@title sample @body world</query>
<!-- <query mode="extended2">-query</query> -->
<query mode="extended2">"quorum query test"/1</query>
<query mode="extended2">"quorum query test"/4</query>
<query mode="extended2">"hello program"~3</query>
<query mode="extended2">"hello program"~4</query>
<query mode="extended2">吐</query>
<query mode="extended2">我</query>
<query mode="extended2">basic | china</query>
<query mode="extended2">"test program" | basic</query>
<query mode="extended2">"test that"~3 | basic</query>
<query mode="extended2">"test that"~3|basic</query>
<query mode="extended2">@title sample @body -basic</query>
<query mode="extended2">-basic|perl sample</query>
<query mode="extended2">-basic|perl sample</query>
<query mode="extended2">77</query>
<query mode="extended2">0077</query>
<query mode="extended2">@title test</query>
<query mode="extended2" expect_error="1">@ttitle test</query>
<query mode="extended2" expect_error="1">@@title test</query>
<query mode="extended2">@@relaxed @ttitle test</query>
<query mode="extended2">""</query>
<query mode="extended2">@title ""</query>
<query mode="extended2">("")</query>
<query mode="extended2">"phrase (!query)/ ~on @steroids"</query>
</queries>

