<?xml version="1.0" encoding="utf-8"?>

<test>
<name>json compat interface populate</name>

<skip_indexer/>

<requires>
<http/>
</requires>

<config>
searchd
{
	<searchd_settings/>
	binlog_path =
}

index test1
{
    type = rt
    path = <data_path/>/test1
    rt_field = title
	rt_field = content
    rt_attr_uint = int_col
}


index test_bool
{
    type = rt
    path = <data_path/>/test_bool
    rt_field = title
    rt_attr_uint = icol
    rt_attr_bool = bcol
}

index test1_all
{
    type = rt
    path = <data_path/>/test1_all
    rt_field = title
    rt_attr_uint = int_col
    rt_attr_string = s_col
    rt_attr_multi = mva_col
}

</config>

